<?xml version="1.0" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Crmp\BaseBundle\Entity\Address\AccessKey"
            table="address_key"
    >
        <id name="uuid" type="string">
            <generator strategy="NONE" />
        </id>

        <field name="publicKey" type="string" />
        <field name="privateKey" type="string" />

        <many-to-one target-entity="Crmp\BaseBundle\Entity\Address" field="address" inversed-by="accessKeys">
            <join-columns>
                <join-column name="address" referenced-column-name="uuid" />
            </join-columns>
        </many-to-one>

        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="getUuid"/>
        </lifecycle-callbacks>
    </entity>
</doctrine-mapping>

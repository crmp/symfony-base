<?xml version="1.0" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Crmp\BaseBundle\Entity\Address">
        <field name="name" type="string" nullable="false" />

        <!-- Nested set -->
        <field name="lft" type="integer" />
        <field name="rgt" type="integer" />
        <field name="lvl" type="integer" />

        <many-to-one target-entity="Crmp\BaseBundle\Entity\Address" field="root">
            <join-column name="uuid" />
        </many-to-one>

        <many-to-one target-entity="Crmp\BaseBundle\Entity\Address" field="parent">
            <join-column name="uuid" />
        </many-to-one>

        <one-to-many target-entity="Crmp\BaseBundle\Entity\Address" mapped-by="parent" field="subAddresses">
            <order-by>
                <order-by-field name="left" direction="ASC"/>
            </order-by>
        </one-to-many>

        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="getUuid"/>
        </lifecycle-callbacks>
    </entity>
</doctrine-mapping>

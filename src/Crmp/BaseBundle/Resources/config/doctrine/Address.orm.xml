<?xml version="1.0" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Crmp\BaseBundle\Entity\Address"
            table="address"
            repository-class="Gedmo\Tree\Entity\Repository\NestedTreeRepository"
    >
        <id name="uuid" type="string">
            <generator strategy="NONE" />
        </id>

        <field name="name" type="string" nullable="false" />
        <field name="email" type="string" nullable="true" unique="true" />
        <field name="enabled" type="boolean" />

        <!-- Nested set -->
        <field name="left" column="lft" type="integer">
            <gedmo:tree-left/>
        </field>
        <field name="right" column="rgt" type="integer">
            <gedmo:tree-right/>
        </field>
        <field name="level" column="lvl" type="integer">
            <gedmo:tree-level/>
        </field>

        <many-to-one target-entity="Crmp\BaseBundle\Entity\Address"
                     field="root"
                     inversed-by="uuid">
            <join-column name="root" referenced-column-name="uuid" on-delete="SET NULL" nullable="true" />
            <gedmo:tree-root/>
        </many-to-one>

        <many-to-one field="parent" target-entity="Crmp\BaseBundle\Entity\Address" inversed-by="subAddresses">
            <join-column name="parent" referenced-column-name="uuid" on-delete="RESTRICT" nullable="true"/>
            <gedmo:tree-parent/>
        </many-to-one>

        <one-to-many field="subAddresses" target-entity="Crmp\BaseBundle\Entity\Address" mapped-by="parent">
            <order-by>
                <order-by-field name="left" direction="ASC" />
            </order-by>
        </one-to-many>

        <gedmo:tree type="nested"/>

        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="getUuid"/>
        </lifecycle-callbacks>
    </entity>
</doctrine-mapping>
